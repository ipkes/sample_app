<% provide(:title, 'Sign in') %>
<h1>Sign in</h1>
<div class="row">
	<div class="span6 offset3">
		<%= form_for(:session, url: sessions_path) do |t| %>
			<%= t.label 	 :email %>
			<%= t.text_field :email %>
			<%= t.label 			:password %>
			<%= t.password_field 	:password %>
			<%= t.submit "Sign in", class: "btn btn-large btn-primary" %>
		<% end %>
		<p> New user? <%= link_to "Sign up now!", signup_path %> </p>
	</div>
</div>